/**app.wxss**/
.container {
  /*height: 100%;*/
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
} 

.author-message{
  font-size: 14px;
}

.introduction-message{
  font-size: 14px;
}

/*表格*/
.contrainer .form{
    /*width: 100%;*/
    height: 50px;
    /*素内弹性盒元素的方向,row|row-reverse|column|column-reverse|initial|inherit;*//*row 是水平向右，默认的*/
    display: flex;
    flex-direction: row;
    /*垂直对齐居中*/
    align-items: center;
     /*justify-content属性定义了项目在主轴上的对齐方式 flex-start | flex-end | center | space-between | space-around;*/
    justify-content: space-between;
    padding: 0px 20px 0px 20px;
    font-size: 13px;
}

/*高度特殊的表格*/
.contrainer .form-special{
    /*width: 100%;*/
    height: 70px;
    /*素内弹性盒元素的方向,row|row-reverse|column|column-reverse|initial|inherit;*//*row 是水平向右，默认的*/
    display: flex;
    flex-direction: row;
    /*垂直对齐居中*/
    align-items: center;
     /*justify-content属性定义了项目在主轴上的对齐方式 flex-start | flex-end | center | space-between | space-around;*/
    justify-content: space-between;
    padding: 0px 20px 0px 20px;
    font-size: 13px;
}

.form-title{
    background-color: #F3F6F8;
    color: #7F7F7F;
}

.form-content{
    margin: 0px 0px 0px 0px;
}

.form-content .first{
    color: #1E6FBD;
}

.form-separateLine{
    margin: 0px 5px 0px 5px;
    background-color: lightgrey;
    height: 1px;
}

.special{
    /*素内弹性盒元素的方向,row|row-reverse|column|column-reverse|initial|inherit;*//*row 是水平向右，默认的*/
    display: flex;
    flex-direction: row;
    /*垂直对齐居中*/
    align-items: center;
     /*justify-content属性定义了项目在主轴上的对齐方式 flex-start | flex-end | center | space-between | space-around;*/
    justify-content: space-between;
    padding: 0px 20px 0px 20px;
    font-size: 13px;
    height: 60px;
}

.form-item{
    width: 100px;
    /*background-color: yellow;*/
}

/*标题*/
.title{
    font-size: 20px;
    font-weight:bold;
    padding: 0px 5px 0px 5px;
    margin-top: 10px;
    margin-bottom: 10px;
}
.child-title{
    font-size: 16px;
    font-weight:bold;
    padding: 0px 5px 0px 5px;
    margin-top: 20px;
    margin-bottom: 20px;
}

/*表格介绍*/
.form-introduction{
    font-size: 14px;
    padding: 0px 5px 0px 5px;
    margin-top: 10px;
    margin-bottom: 10px;
    color: #515151;
}

/*注意点*/
.form-attention{
    font-size: 14px;
    font-weight:bold;
    padding: 0px 5px 0px 5px;
    margin-top: 20px;
    margin-bottom: 20px;
}

/*代码块*/
.code-block{
    background-color: #F5F5F5;
    padding-left: 10px;
    font-size: 13px;
    font-weight:100;
    margin: 20px 0px 20px 0px;
    padding-top: 20px;
    padding-bottom: 20px;
    color: #95B04A;
}

/*图片介绍*/
.introduction-image-view{
    background-color: rebeccapurple;
    width: 100%;
    height: 300px;
    /*素内弹性盒元素的方向,row|row-reverse|column|column-reverse|initial|inherit;row 是水平向右，默认的*/
    display: flex;
    flex-direction: row;
    /*垂直对齐居中*/
    align-items: center;
     /*justify-content属性定义了项目在主轴上的对齐方式 flex-start | flex-end | center | space-between | space-around;*/
    justify-content: center;
}