/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
} 

.author-message{
  font-size: 14px;
}

.introduction-message{
  font-size: 14px;
}

/*表格*/
.contrainer .form{
    /*width: 100%;*/
    height: 40px;
    /*素内弹性盒元素的方向,row|row-reverse|column|column-reverse|initial|inherit;*//*row 是水平向右，默认的*/
    display: flex;
    flex-direction: row;
    /*垂直对齐居中*/
    align-items: center;
     /*justify-content属性定义了项目在主轴上的对齐方式 flex-start | flex-end | center | space-between | space-around;*/
    justify-content: space-between;
    padding: 0px 20px 0px 20px;
    font-size: 13px;
}

.form-title{
    background-color: ghostwhite;
}

.form-content{
    margin: 0px 0px 0px 0px;
}

.form-content .first{
    color: lightskyblue
}

.form-separateLine{
    margin: 0px 5px 0px 5px;
    background-color: lightgrey;
    height: 1px;
}

/*标题*/
.title{
    font-size: 20px;
    border: 2px;
    padding: 0px 5px 0px 5px;
    margin-top: 10px;
    margin-bottom: 10px;
}

/*表格介绍*/
.form-introduction{
    font-size: 13px;
    padding: 0px 5px 0px 5px;
    margin-top: 10px;
    margin-bottom: 10px;
}

/*注意点*/
.form-attention{
    font-size: 16px;
    border: 10px;
    padding: 0px 5px 0px 5px;
    margin-top: 20px;
}